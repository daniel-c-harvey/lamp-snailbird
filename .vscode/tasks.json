{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Browse Site",
            "type": "process",
            "command": "firefox.exe",
            "options": {
                "cwd": "C:\\Program Files\\Mozilla Firefox\\"
            },
            "args": [
                "-new-window",
                "http://localsnail"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Package for Deployment",
            "type": "shell",
            "command": "rm full-package-deploy.zip; cd webroot; zip -r ../full-package-deploy.zip ./*; explorer ..;",
            "group": "none"
        }
    ]
}